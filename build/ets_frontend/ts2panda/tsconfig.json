{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./dist/types/",
        "declarationMap": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "ES2015",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "types": [
            "node"
        ],
        "rootDir": "./",
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "*.test.ts"
    ]
}