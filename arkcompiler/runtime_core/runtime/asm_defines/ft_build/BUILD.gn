import("//arkcompiler/runtime_core/ft_build/ark_config.gni")

config("asmdefines_public_config") {
  include_dirs = [ "$target_gen_dir/generated/" ]
}

ft_static_library("asm_defines") {
  sources = [ "../defines.cpp" ]
  configs = [
    "$ark_root/ft_build:ark_config",
    "$ark_root/runtime/ft_build:arkruntime_public_config",
    "$ark_root/libpandabase/ft_build:arkbase_public_config",
    #sdk_libc_secshared_config,
    "$ark_root/libpandafile/ft_build:arkfile_public_config",
  ]
  cflags_cc = [
    "-Wno-invalid-offsetof",
    "-S",
  ]
  output_dir = "$target_gen_dir/generated"
  output_extension = "S"
  output_name = "libasm_defines"
  deps = [
    "$ark_root/libpandafile/ft_build:arkfile_header_deps",
    "$ark_root/runtime/ft_build:arkruntime_header_deps",
    sdk_libc_secshared_dep,
  ]

  part_name = "runtime_core"
  subsystem_name = "arkcompiler"
}

action("asm_defines_generator") {
  script = "$ark_root/runtime/asm_defines/defines_generator.rb"
  outputs = [ "$target_gen_dir/../generated/asm_defines.h" ]
  args = [
    rebase_path("$target_out_dir/libasm_defines.S", root_build_dir),
    rebase_path(outputs[0]),
  ]
  deps = [ ":asm_defines" ]
}
