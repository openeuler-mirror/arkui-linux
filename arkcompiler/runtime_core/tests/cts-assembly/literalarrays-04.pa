#assert that operations with array of f32 works fine
#f32[] array = [0, 1, 2, 3, 4, 5, 6];
#for(i=6; i>=0; i--) assert_eq(i, array[i]);

.array array_f32 f32 7 {0 1 2 3 4 5 6}

.function i32 main(){
    lda.const v0, array_f32
    movi v1, 6
    ldai 6
loop:
    jltz loop_exit
    lda v1
    i32tof32
    sta v2
    lda v1
    fldarr.32 v0
    fsub2 v2
    sta v2
    call.short abs, v2, v2
    sta v2
    fldai 1e-6
    fcmpl v2
    jlez exit_failure
    inci v1, -1
    lda v1
    jmp loop
loop_exit:
    ldai 0
    return
exit_failure:
    ldai 1
    return
}

.function f32 abs(f32 a0){
    fldai 0.0
    fcmpl a0
    jlez label
    lda a0
    fneg
    return
label:
    lda a0
    return
}